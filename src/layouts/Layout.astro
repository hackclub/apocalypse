---
interface Props {
  title: string;
}

const { title } = Astro.props;

// import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta property="og:site_name" content="Apocalypse">
    <meta
      name="description"
      content="Apocalypse is a high school hackathon in Toronto where you hack your survival!"
    />
    <meta
      name="twitter:description"
      content="Apocalypse is a high school hackathon in Toronto where you hack your survival!"
    />
    <meta
      property="og:description"
      content="Apocalypse is a high school hackathon in Toronto where you hack your survival!"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="coding, high school, hackathon, teenager, zombies, apocalypse"
    />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <slot />
    <!-- <SpeedInsights /> -->
  </body>
</html>

<style is:global>
  body {
    @apply overflow-x-clip bg-dark-bg font-main text-purple-50;
  }

  @font-face {
    font-family: "NeueBit-Bold";
    src:
      url("/fonts/NeueBit-Bold.woff2") format("woff2"),
      url("/fonts/NeueBit-Bold.woff") format("woff");
    font-weight: bold;
    font-style: normal;
    font-display: block;
    /* TODO: block is a little controversial, but swap feels more jarring */
